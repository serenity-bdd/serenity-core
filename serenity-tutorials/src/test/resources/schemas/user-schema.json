{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User",
    "description": "Schema for JSONPlaceholder user",
    "type": "object",
    "required": ["id", "name", "username", "email"],
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "username": {
            "type": "string",
            "minLength": 1
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "address": {
            "type": "object",
            "properties": {
                "street": { "type": "string" },
                "suite": { "type": "string" },
                "city": { "type": "string" },
                "zipcode": { "type": "string" },
                "geo": {
                    "type": "object",
                    "properties": {
                        "lat": { "type": "string" },
                        "lng": { "type": "string" }
                    }
                }
            }
        },
        "phone": { "type": "string" },
        "website": { "type": "string" },
        "company": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "catchPhrase": { "type": "string" },
                "bs": { "type": "string" }
            }
        }
    }
}
